<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<DialogPane fx:controller="sk.uniza.fri.telefonnyzoznam.controllers.KontaktController" xmlns:fx="http://javafx.com/fxml">
    <headerText>
        Vytvorenie nového kontaktu (* povinné údaje)
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Meno: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label text="*" GridPane.rowIndex="0" GridPane.columnIndex="1" textFill="darkred"/>
            <TextField fx:id="meno" GridPane.rowIndex="0" GridPane.columnIndex="2"/>

            <Label text="Priezvisko: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="priezvisko" GridPane.rowIndex="1" GridPane.columnIndex="2"/>

            <Label text="Telefónne číslo: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label text="*" GridPane.rowIndex="2" GridPane.columnIndex="1" textFill="darkred"/>
            <TextField fx:id="telCislo" GridPane.rowIndex="2" GridPane.columnIndex="2"/>

            <Label text="Dodatočné info (zamestnanie, rodina, ...):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="poznamka" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
        </GridPane>
    </content>
</DialogPane>